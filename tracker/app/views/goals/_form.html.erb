<div class="pure-form">
  <%= form_for(@goal) do |f| %>
    <% if @goal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this habit from being saved:</h2>

        <ul>
        <% @goal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
<form class="pure-form">
 <fieldset class="pure-group">
    <div class="pure-input-1-2">
      <%= f.label :habits %><br>
      <%= f.text_area :habits %>
    </div>
    <div class="pure-input-1-2">
      <%= f.label :habits_desc %><br>
      <%= f.text_area :habits_desc %>
    </div>
    <% f.hidden_field :days_completed, :value => "0" %>
    <% f.hidden_field :user_id, :value => user.id %>
    <% f.hidden_field :days_missed, :value => "0" %>
    <div class="pure-input-1-2">
      <%= f.submit %>
    </div>
  </fieldset>
  <% end %>
</div>
</form>