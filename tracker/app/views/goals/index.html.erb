<p id="notice"><%= notice %></p>
  <%= link_to 'New Goal', new_goal_path %>
  <div id="goals"></div>
                      <% @goals.each do |goal| %>
<div class="pricing-tables pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
            <div class="pricing-table pricing-table-free">
                <div class="pricing-table-header">
                    <h2><%= goal.habits %></h2>
                </div>
                <ul class="pricing-table-list">
                  <li><%= goal.habits_desc %></li>
                  <li><%= goal.days_completed %></li>
                </ul>
                <button class="button-choose pure-button"><%= link_to 'Edit', edit_goal_path(goal) %></button>
                <button class="button-choose pure-button"><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></button>
            </div>
        </div>
      </div>
</div>
        <% end %>
  </body>
  </html>